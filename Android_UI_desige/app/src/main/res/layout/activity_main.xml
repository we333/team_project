<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/beijinchuan"
    tools:context="com.example.dongzhe.mycarpool.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carpool"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#00000000"
        android:layout_marginTop="184dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ユーザー："
        android:id="@+id/textView2"
        android:layout_marginTop="72dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginEnd="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="パスワード"
        android:id="@+id/textView_p_to"
        android:layout_marginTop="47dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_pass"
        android:layout_alignTop="@+id/textView_p_to"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ドライバー"
        android:id="@+id/button_diver"
        android:textSize="20dp"
        android:src="@drawable/sijizhongji"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/textView32"
        android:layout_toStartOf="@+id/editText_pass" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_noru"
        android:textSize="20dp"
        android:src="@drawable/chengkechuan"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/button_diver"
        android:layout_alignEnd="@+id/editText_pass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_needhelp"
        android:singleLine="false"
        android:background="@android:color/transparent"
        android:textColor="@color/abc_secondary_text_material_light"
        android:text="忘れた場合はこちら"
        android:layout_alignBottom="@+id/textView_p_to"
        android:layout_toEndOf="@+id/textView31" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アカウント作成"
        android:id="@+id/button_register"
        android:background="@android:color/transparent"
        android:textColor="@color/abc_secondary_text_material_light"
        android:layout_alignBottom="@+id/editText_name"
        android:layout_alignStart="@+id/button_needhelp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLogo"
        android:focusable="false"
        android:src="@drawable/carpool_logo"
        android:longClickable="false"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="乗る人"
        android:id="@+id/textView31"
        android:layout_below="@+id/button_noru"
        android:layout_alignStart="@+id/button_noru" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="身分選び："
        android:id="@+id/textView32"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/editText_pass"
        android:layout_alignStart="@+id/textView_p_to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ドライバー"
        android:id="@+id/textView3"
        android:layout_below="@+id/button_diver"
        android:layout_toEndOf="@+id/textView_p_to" />
</RelativeLayout>
