<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/beijinchuan"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dongzhe.mycarpool.PassengerBrowse">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="検索"
        android:id="@+id/button_p_search"
        android:layout_below="@+id/textView23"

        android:layout_alignEnd="@+id/editText_search_to" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_below="@+id/button_p_search"
        android:layout_alignEnd="@+id/editText_search_to"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日付："
        android:id="@+id/textView22"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="車主名"
        android:id="@+id/textView20"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/line"
        android:layout_toEndOf="@+id/textView_pass_output" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_pass_output"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText_search_date"
        android:layout_alignBottom="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="出発地："
        android:id="@+id/textView21"
        android:layout_alignBottom="@+id/editText_search_date"
        android:layout_toEndOf="@+id/editText_search_date" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_search_from"
        android:layout_alignTop="@+id/editText_search_date"
        android:layout_toEndOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="到着地："
        android:id="@+id/textView23"
        android:layout_alignBottom="@+id/editText_search_from"
        android:layout_toEndOf="@+id/editText_search_from" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_search_to"
        android:layout_above="@+id/button_p_search"
        android:layout_toEndOf="@+id/textView23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日付"
        android:id="@+id/textView25"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/textView26"
        android:layout_toEndOf="@+id/button_pass_car" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="出発地"
        android:id="@+id/textView26"
        android:layout_alignTop="@+id/textView20"
        android:layout_toEndOf="@+id/editText_search_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="到着地"
        android:id="@+id/textView27"
        android:layout_alignTop="@+id/textView26"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="値段"
        android:id="@+id/textView28"
        android:layout_alignTop="@+id/textView27"
        android:layout_alignEnd="@+id/editText_search_from" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="座席"
        android:id="@+id/textView29"
        android:layout_alignTop="@+id/textView28"
        android:layout_toStartOf="@+id/editText_search_to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="コメント"
        android:id="@+id/textView30"
        android:layout_alignTop="@+id/textView29"
        android:layout_alignEnd="@+id/line" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:id="@+id/button_pass_car"
        android:background="@android:color/transparent"
        android:layout_below="@+id/textView_pass_output"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/textView_s_date"
        android:layout_alignTop="@+id/button_pass_car"
        android:layout_alignStart="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/textView_p_from"
        android:layout_alignTop="@+id/textView_p_to"
        android:layout_alignStart="@+id/textView26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/textView_p_to"
        android:layout_alignTop="@+id/textView_s_date"
        android:layout_alignStart="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/textView_p_price"
        android:layout_alignTop="@+id/textView_p_to"
        android:layout_alignStart="@+id/textView28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/textView_p_seat"
        android:layout_alignTop="@+id/textView_p_price"
        android:layout_alignStart="@+id/textView29" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/textView_p_comment"
        android:layout_alignTop="@+id/textView_p_seat"
        android:layout_alignStart="@+id/textView30" />

</RelativeLayout>
